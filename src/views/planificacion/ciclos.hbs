<body class="with-side-menu">
	{{> navbar }}
	<div class="mobile-menu-left-overlay-"></div>
	{{> nav }}
	<div class="page-content">
		<div class="container-fluid">
			<header class="section-header">
				<div class="tbl">
					<div class="tbl-row">
						<div class="tbl-cell">
							<h3>Ciclos</h3>
							<ol class="breadcrumb breadcrumb-simple">
								<li><a href="/home">Inicio</a></li>
								<li class="active">Ciclos</li>
							</ol>
						</div>
                    </div>    
				</div>
			</header>
			<div class="row">
				<div class="col-md-4">
					<div class="box-typical box-typical-padding">
						<h5 class="m-t-lg with-border">Patrón de repetición</h5>
						<form id="ciclo_form" action="" method="post">
							<div class="form-group">
								<label for="nombre">Asigne un nombre</label>
								<input type="text" class="form-control" id="nombre" name="nombre">
								<br>
								<div class="checkbox-bird green col-md-6">
									<input type="checkbox" name="radio-1" id="radio-1" value="1">
									<label for="radio-1">Diario</label>
								</div>
								<div class="checkbox-bird green col-md-6">
									<input type="checkbox" name="radio-2" id="radio-2" value="2">
									<label for="radio-2">Semanal</label>
								</div>
								<div class="checkbox-bird green col-md-6">
									<input type="checkbox" name="radio-3" id="radio-3" value="3">
									<label for="radio-3">Mensual</label>
								</div>
								<div class="checkbox-bird green col-md-6">
									<input type="checkbox" name="radio-4" id="radio-4" value="4">
									<label for="radio-4">Anual</label>	
								</div>
								<br>
								<h5 class="m-t-lg with-border" id="borde" style="display: none;"></h5>
								<div class="checkbox col-md-6" id="TD" style="display: none;">
									<input type="checkbox" name="radio_td" id="radio_td" value="TD">
									<label for="radio_td">Todos los días</label>
								</div>
								<div class="checkbox col-md-6" id="TDN" style="display: none;">
									<input type="checkbox" name="radio_tdn" id="radio_tdn" value="TDn">
									<input class="form-control" type="number" name="dias" id="dias" min="1">
								</div>
							</div>
							<br>
							<button type="submit" class="btn btn-rounded btn-success" id="crear" name="crear">Crear</button>
						</form>
					</div>
				</div>
				<div class="col-md-8">
					<div class="box-typical box-typical-padding">
						<table id="tabla_prot" class="table table-bordered table-striped table-vcenter js-dataTable-full">
							<thead>
								<tr>
									<th>Id</th>
									<th>Nombre</th>
									<th>Ciclo</th>
									<th>Mantención</th>
								</tr>
							</thead>
							<tbody>
								{{#each tipo}}
								<tr>
									<td>{{ID}}</td>
									<td>{{TIPO}}</td>
									<td>{{TIPO}}</td>
									<td>{{TIPO}}</td>
								</tr>    
								{{/each}}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>	
	</div>
	<script src="/js/lib/jquery/jquery.min.js"></script>
	<script src="/js/lib/tether/tether.min.js"></script>
	<script src="/js/lib/bootstrap/bootstrap.min.js"></script>
	<script src="/js/plugins.js"></script>
	<script src="/js/app.js"></script>
	<script src="/js/lib/datatables-net/datatables.min.js"></script>
	<script src="/js/lib/bootstrap-sweetalert/sweetalert.min.js"></script>
	<script src="/js/lib/summernote/summernote.min.js"></script>
	<script src="/js/lib/fancybox/jquery.fancybox.pack.js"></script>
	<script src="/js/summernote-ES.js"></script>
	<script src="/js/lib/select2/select2.full.min.js"></script>
	<script src="/ciclos.js"></script>
</body>	